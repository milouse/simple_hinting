{
  "manifest_version": 2,
  "name": "Simple Hinting",
  "version": "0.0.2",
  "description": "Allow keyboard browsing through links hinting.",
  "icons": {
    "48": "img/icon48.png",
    "96": "img/icon96.png"
  },
  "author": "Ã‰tienne Deparis",
  "applications": {
    "gecko": {
      "id": "simple_hinting@umaneti.net",
      "strict_min_version": "56.0"
    }
  },
  "permissions": [
    "<all_urls>",
    "tabs"
  ],
  "background": {
    "scripts": ["js/opentab.js"]
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["js/hints.js"],
    "all_frames": true,
    "run_at": "document_start"
  }],
  "commands": {
    "display-hints": {
      "suggested_key": { "default": "Alt+Space" },
      "description": "Show/hide the little green labels to help you to browse with your keyboard"
    }
  }
}
