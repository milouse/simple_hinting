{
  "manifest_version": 2,
  "name": "Simple Hinting",
  "version": "0.0.5rc1",
  "description": "Allow keyboard browsing through links hinting.",
  "icons": {
    "48": "img/icon48.png",
    "96": "img/icon96.png"
  },
  "author": "Ã‰tienne Deparis",
  "homepage_url": "https://git.deparis.io/simple_hinting/about/",
  "applications": {
    "gecko": {
      "id": "simple_hinting@umaneti.net",
      "strict_min_version": "56.0"
    }
  },
  "permissions": ["<all_urls>", "tabs", "storage"],
  "background": {
    "scripts": ["js/browser-polyfill.min.js", "js/background.js"]
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": [
      "js/browser-polyfill.min.js",
      "js/default_params.js",
      "js/hints.js"
    ],
    "css": ["css/hints.css"],
    "all_frames": true,
    "run_at": "document_start"
  }],
  "options_ui": {
    "page": "options.html"
  }
}
